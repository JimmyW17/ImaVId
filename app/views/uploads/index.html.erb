<div class="container background_div">
  <div class="row upload_row">
    <div class="col-md-6 col-md-offset-3 form-group upload_form_div">
      <%= form_tag "/uploads", id: "uploadForm", method: "get" do %>
      <%= text_field_tag :image_url, "", placeholder:'Enter url to an image here. . .', class:'form-control', autofocus: :true %>
      <% end %>
    </div>
  </div>
  <% if @link %>
  <div class="row image_div">
    <div class="col-md-6 col-md-offset-3 image_ujs">
      <img src="<%=params[:image_url] %>" alt="" style="width: 300px">
      <% if user_signed_in? %>
      <%= form_for [@album, @picture], html: {multipart: true} do |form|%>
      <%= form.hidden_field :image, value: params[:image_url] %>
      <%= form.hidden_field :tags, value: @json %>
      <%= form.hidden_field :picture_remote_url, :value => params[:image_url] %>
      <%= form.submit "Add to Album", class:"btn btn-default"%>
      <% end %>
      <% end %>
    </div>
  </div>
</div>


<div class="row confidence">
  <% if flash[:confident] %>
  <div class="col-md-8 col-md-offset-2" id="confident"><h3><i class="fa fa-info-circle" aria-hidden="true"></i>
<%= flash[:confident] %></h3></div>
  <% elsif flash[:maybe] %>
  <div class="col-md-8 col-md-offset-2" id="maybe"><h3><i class="fa fa-info-circle" aria-hidden="true"></i>
<%= flash[:maybe] %></h3></div>
  <% elsif flash[:unconfident] %>
  <div class="col-md-8 col-md-offset-2" id="unconfident"><h3><i class="fa fa-info-circle" aria-hidden="true"></i>
<%= flash[:unconfident] %></h3></div>
  <% else %>
  <% end %>
</div>
<br>

<div class="row">
  <div class="col-md-6">
    <iframe width="560" height="315" src="https://www.youtube.com/embed/<%=@link%>" frameborder="0" allowfullscreen></iframe>
  </div>
  <div class="col-md-6">
    <iframe src="<%=@giphyEmbed%>" width="560" height="315" frameBorder="0" class="giphy-embed" allowFullScreen></iframe>
  </div>
</div>
<% hash = Hash.new %>
<% @tags.each do |t| %>
<% hash[t['tag']] = t['confidence'] %>
<% end %>
<%= bar_chart hash %>
<% end %>

<%= javascript_include_tag 'upload', 'data-turbolinks-track': 'reload' %>
