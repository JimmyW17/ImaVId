<div id=album-wrapper>

  <div class="row album">
    <% @cols = 1 %>
    <% @pictures.each do |picture| %>
    <% if picture.picture_remote_url? %>
    <% if @cols <= 4 %>
    <div class="col-md-3 image-wrapper">
      <%= link_to image_tag(picture.picture_remote_url), album_picture_path(picture.album_id, picture.id) %>
    </div>
    <% @cols += 1 %>
  <% else %>
  </div>
  <div class="row album">
    <div class="col-md-3 image-wrapper">
      <%= link_to image_tag(picture.picture_remote_url), album_picture_path(picture.album_id, picture.id) %>
    </div>
    <% @cols = 2 %>
    <% end %>
    <% end %>
    <% end %>
  </div>
</div>
