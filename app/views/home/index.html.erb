<% elsif @haspictures %>
<div class="background_div">
<div class="row album home_image">
  <div class="flexslider">
    <ul class="slides">
      <% @pictures.each do |picture| %>
      <li class="content">
        <%= link_to image_tag(picture.picture_remote_url), album_picture_path(@album, picture)%>
      </li>
      <% end %>
    </ul>
  </div>
</div>
</div>
