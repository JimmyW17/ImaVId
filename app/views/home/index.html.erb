<% if !user_signed_in? %>
<div class="row black-txt background_div">
  <div class="col-md-12">
    <h1 class="cover-heading black-txt">With An Image</h1>
    <p class="lead">What can you do with a single image</p>
    <p class="lead">
      <!-- <a href="#about" class="btn btn-lg btn-default">Upload</a> -->
      <%= link_to "Upload", uploads_path, class: 'btn btn-lg btn-default'%>
    </p>
  </div>
</div>
<% elsif @haspictures %>
<div class="background_div">
<div class="row album home_image">
  <div class="flexslider">
    <ul class="slides">
      <% @pictures.each do |picture| %>
      <li class="content">
        <%= link_to image_tag(picture.picture_remote_url), album_picture_path(@album, picture)%>
      </li>
      <% end %>
    </ul>
  </div>
</div>
</div>
<% else %>
<div class="row black-txt background_div">
  <div class="col-md-12">
    <h1 class="cover-heading black-txt">Upload an image to get started!</h1>
    <p class="lead">
      <!-- <a href="#about" class="btn btn-lg btn-default">Upload</a> -->
      <%= link_to "Upload", uploads_path, class: 'btn btn-lg btn-default'%>
    </p>
  </div>
</div>
<% end %>
